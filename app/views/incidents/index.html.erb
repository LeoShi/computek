<h2>INCIDENT REPORT</h2>
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Requestor</th>
      <th>Location</th>
      <th>Mobile Number</th>
      <th>Picture</th>
      <th>Status</th>
      <th>Handling Officer</th>
      <th>DateTime</th>
      <th>Reference</th>
    </tr>
  </thead>
  <tbody>
    <% @incidents.each do |incident| %>
    <tr>
      <td><%= incident.category %></td>
      <td><%= incident.mobile_user.name %></td>
      <td><%= incident.location.street %></td>
      <td><%= incident.mobile_user.mobile_contact %></td>
      <td><%= image_tag incident.avatar.url(:medium) %></td>
      <td><%= incident.status %></td>
      <td><%= incident.user.name %></td>
      <td><%= incident.updated_at %></td>
      <td><%= link_to incident.reference, edit_incident_path(incident) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @incidents, :class => "pagination pagination-centered", :previous_label => "<<", :next_label => ">>" %>
